@model WebApplication.Models.Categoria

@{
    ViewData["Title"] = "Detalhes";
}

<div class="container mt-5">
    <div class="row">
        <h2>Categoria</h2>
        <hr />
        <div>
            <dl>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataCriacao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataCriacao)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdCategoria)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdCategoria)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NomeCategoria)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NomeCategoria)
                </dd>
            </dl>
        </div>
    </div>
    <hr />
    <div class="btn-group" role="group">
        <button onclick="location.href='@Url.Action("Edit", "Categoria", new { guidId = Model.IdCategoria })';return false;" class="btn btn-primary">Editar</button>
        <button onclick="location.href='@Url.Action("Index", "Categoria")';return false;" class="btn btn-dark">Voltar</button>
    </div>
</div>
