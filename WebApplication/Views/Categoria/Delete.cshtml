@model WebApplication.Models.Response.DeletarCategoriaResponse

@{
    ViewData["Title"] = "Deletar Categoria";
}

<div class="container mt-5">
    <div class="row">
        <h2>Deletar Categoria</h2>
        <hr />
        <div class="alert alert-danger" role="alert">
            Tem certeza que deseja deletar esta categoria?
        </div>
        <div class="col-md-4">
            <form asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdCategoria" class="control-label"></label>
                    <input asp-for="IdCategoria" class="form-control" readonly />
                    <span asp-validation-for="IdCategoria" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NomeCategoria" class="control-label"></label>
                    <input asp-for="NomeCategoria" class="form-control" readonly />
                    <span asp-validation-for="NomeCategoria" class="text-danger"></span>
                </div>
                <hr />
                <div class="btn-group" role="group">
                    <button class="btn btn-danger" type="submit">Deletar</button>
                    <button class="btn btn-dark">Voltar</button>
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
