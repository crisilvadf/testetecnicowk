@model WebApplication.Models.Produto

@{
    ViewData["Title"] = "Detalhes";
}

<div class="container mt-5">
    <div class="row">
        <h2>Produto</h2>
        <hr />
        <div>
            <dl>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataCriacao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataCriacao)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IdProduto)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdProduto)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NomeProduto)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NomeProduto)
                </dd>
            </dl>
        </div>
    </div>
    <hr />
    <div class="btn-group" role="group">
        <button onclick="location.href='@Url.Action("Edit", "Produto", new { guidId = Model.IdProduto })';return false;" class="btn btn-primary">Editar</button>
        <button onclick="location.href='@Url.Action("Index", "Produto")';return false;" class="btn btn-dark">Voltar</button>
    </div>
</div>
