@model WebApplication.Models.Response.DeletarProdutoResponse

@{
    ViewData["Title"] = "Deletar Produto";
}

<div class="container mt-5">
    <div class="row">
        <h2>Deletar Produto</h2>
        <hr />
        <div class="alert alert-danger" role="alert">
            Tem certeza que deseja deletar este produto?
        </div>
        <div class="col-md-4">
            <form asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdProduto" class="control-label"></label>
                    <input asp-for="IdProduto" class="form-control" readonly />
                    <span asp-validation-for="IdProduto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NomeProduto" class="control-label"></label>
                    <input asp-for="NomeProduto" class="form-control" readonly />
                    <span asp-validation-for="NomeProduto" class="text-danger"></span>
                </div>
                <hr />
                <div class="btn-group" role="group">
                    <button class="btn btn-danger" type="submit">Deletar</button>
                    <button class="btn btn-dark">Voltar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
